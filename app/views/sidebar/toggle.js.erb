<%
  show_sidebar = session[ toggle_sidebar_session_name_show_sidebar(
      params['original_controller'], params['original_action']
    ) ]

  show_sidebar = true if show_sidebar.nil?
%>

toggleSidebarImageTrue = '<%= toggle_sidebar_image(true) %>';
toggleSidebarImageFalse = '<%= toggle_sidebar_image(false) %>';
toggleSidebarShowSidebar = <%= show_sidebar.to_s %>;

$toggleSidebarMain = $('#main')
$toggleSidebarView = $('#sidebar_view')

if (toggleSidebarShowSidebar) {
    $toggleSidebarMain.removeClass('nosidebar');
    $toggleSidebarView.attr('src', toggleSidebarImageTrue);
} else {
    $toggleSidebarMain.addClass('nosidebar');
    $toggleSidebarView.attr('src', toggleSidebarImageFalse);
}
$toggleSidebarMain.trigger("resize");
